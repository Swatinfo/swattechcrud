{
    "name": "swattech/crud",
    "description": "Enterprise-grade Crud generator for Laravel 12 with theme integration",
    "type": "library",
    "keywords": [
        "laravel",
        "crud",
        "generator",
        "admin",
        "scaffold",
        "database",
        "relationships",
        "vuexy"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Swat Info System",
            "email": "vipul@swatinfosystem.com",
            "homepage": "https://swatinfosystem.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "laravel/framework": "^12.0",
        "doctrine/dbal": "^3.7",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/console": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/contracts": "^12.0",
        "illuminate/events": "^12.0",
        "nesbot/carbon": "^3.0",
        "barryvdh/laravel-ide-helper": "^3.0",
        "maatwebsite/excel": "*",
        "barryvdh/laravel-dompdf": "*",
        "phpoffice/phpspreadsheet": "*",
        "darkaonline/l5-swagger": "^8.0",
        "league/csv": "^9.0",
        "laravel/scout": "^10.0",
        "league/flysystem": "^3.0",
        "ramsey/uuid": "^4.0",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0",
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "fakerphp/faker": "^1.23",
        "laravel/dusk": "^8.4",
        "nunomaduro/collision": "^8.0",
        "brianium/paratest": "^8.0"
    },
    "suggest": {
        "symfony/var-dumper": "Required for using the dd function (^7.0)",
        "laravel/sanctum": "Required for API authentication (^4.0)",
        "spatie/laravel-medialibrary": "For advanced file management (^11.0)",
        "spatie/laravel-permission": "For role and permission handling (^6.0 for Laravel 12)"
    },
    "autoload": {
        "psr-4": {
            "SwatTech\\Crud\\": "src/"
        },
        "files": [
            "src/Helpers/RelationshipHelper.php",
            "src/Helpers/SchemaHelper.php",
            "src/Helpers/StringHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SwatTech\\Crud\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SwatTech\\Crud\\SwatTechCrudServiceProvider"
            ],
            "aliases": {
                "Crud": "SwatTech\\Crud\\Facades\\Crud"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:parallel": "vendor/bin/paratest",
        "format": "vendor/bin/pint",
        "analyze": "vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm",
        "cs:fix": "vendor/bin/php-cs-fixer fix"
    }
}